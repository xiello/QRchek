# Database (Required for production)
DATABASE_URL=postgresql://user:password@localhost:5432/qrchek

# Security (Required in production, auto-generated in dev)
JWT_SECRET=your-secure-random-string-at-least-32-characters

# QR Code validation (comma-separated for multiple locations)
VALID_QR_CODE=QRCHEK-2024-COMPANY

# Server
PORT=3001
NODE_ENV=development

# Email (Optional - for password reset functionality)
# Using Resend (recommended)
RESEND_API_KEY=re_your_api_key_here

# Or using SMTP (alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Frontend URL for CORS (production only)
# FRONTEND_URL=https://your-app.up.railway.app

# Auto-checkout cron job (disabled by default in dev)
ENABLE_AUTO_CHECKOUT=false
